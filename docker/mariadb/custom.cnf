[mysqld]
ssl-ca=/etc/mysql/ssl/ca.crt
ssl-cert=/etc/mysql/ssl/mariadb_server.crt
ssl-key=/etc/mysql/ssl/mariadb_server.key

plugin_load_add = server_audit
server_audit_logging = ON
server_audit_events = CONNECT,QUERY,TABLE
server_audit_output_type = FILE
server_audit_file_path = /var/log/mysql/mariadb-audit.log
server_audit_incl_users = laysoft

#server_audit_excl_users
#server_audit_incl_hosts
#server_audit_excl_hosts

[server]
sql-mode="NO_ENGINE_SUBSTITUTION"
thread_stack = 1024K
